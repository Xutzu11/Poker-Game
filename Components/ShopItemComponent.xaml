<UserControl x:Class="SuperbetBeclean.Components.ShopItemComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:SuperbetBeclean.Components"
             mc:Ignorable="d"
             Height="200" Width="150">
    <Border CornerRadius="10" Background="White" Margin="10">
        <StackPanel>
            <Image Height="100" Source="{Binding ImagePath}" Margin="10"/>
            <TextBlock Text="{Binding Name}" FontWeight="Bold" HorizontalAlignment="Left"/>
            <TextBlock Text="{Binding Description}" TextWrapping="Wrap" HorizontalAlignment="Left"/>
            <Button Content="BUY for x Chips" Command="{Binding BuyCommand}" HorizontalAlignment="Left" Margin="10" Background="#00000000" BorderThickness="0"/>
        </StackPanel>
    </Border>
</UserControl>