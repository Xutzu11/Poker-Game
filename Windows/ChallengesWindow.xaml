                    <Border Background="White"
                            Height="148"
                            Width="180"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Top"
                            CornerRadius="20"
                            Opacity="0.3"
                            Margin="0,165,0,0">
                    </Border>
                    <TextBlock
                            Text="Challenge Name &#x0a; &#x0a;Challenge Description &#x0a; &#x0a;Progress:&#x0a;&#x0a;Rewards:"
                            Foreground="Black"
                            VerticalAlignment="Top"
                            HorizontalAlignment="Center"
                            TextAlignment="Center"
                            Margin="0,170,0,0" Width="156" Height="117"
                            
                        />

                    <Border CornerRadius="7" Background="Goldenrod" Margin="36,292,40,12">
